Rn<-c("Rn4","Rn6")
trim<-c("trimmed","untrimmed")
dataset <- c("7973","8033","8043","8050","8059")

#loops through both Rn and trim status and completes all actions on each
for(a in seq_along(Rn)){
  for(b in seq_along(trim)){
    for(c in seq_along(dataset)){

#imports the files
filepath<-paste("~/Desktop/groupproject/files/final/",trim[b],"/",trim[b],"_",Rn[a],"_",dataset[c],"_final", sep = "")        
assign(paste("genes",dataset[c],Rn[a],trim[b],sep = "_"),read_delim(filepath, "\t", escape_double = FALSE, trim_ws = TRUE))    
    }
  }
}
#merges all imported datasets into relevant categories for further analysis
genes_Rn4_untrimmed<-merge(genes_8059_Rn4_untrimmed[,c(5,7,10)],merge(genes_8033_Rn4_untrimmed[,c(7,10)],merge(genes_8043_Rn4_untrimmed[,c(7,10)],merge(genes_7973_Rn4_untrimmed[,c(7,10)],genes_8050_Rn4_untrimmed[,c(7,10)], by ="locus", all=TRUE), by ="locus", all=TRUE), by ="locus", all=TRUE), by ="locus", all=TRUE)
genes_Rn4_trimmed<-merge(genes_8059_Rn4_trimmed[,c(5,7,10)],merge(genes_8033_Rn4_trimmed[,c(7,10)],merge(genes_8043_Rn4_trimmed[,c(7,10)],merge(genes_7973_Rn4_trimmed[,c(7,10)],genes_8050_Rn4_trimmed[,c(7,10)], by ="locus", all=TRUE), by ="locus", all=TRUE), by ="locus", all=TRUE), by ="locus", all=TRUE)
genes_Rn6_untrimmed<-merge(genes_8059_Rn6_untrimmed[,c(5,7,10)],merge(genes_8033_Rn6_untrimmed[,c(7,10)],merge(genes_8043_Rn6_untrimmed[,c(7,10)],merge(genes_7973_Rn6_untrimmed[,c(7,10)],genes_8050_Rn6_untrimmed[,c(7,10)], by ="locus", all=TRUE), by ="locus", all=TRUE), by ="locus", all=TRUE), by ="locus", all=TRUE)
genes_Rn6_trimmed<-merge(genes_8059_Rn6_trimmed[,c(5,7,10)],merge(genes_8033_Rn6_trimmed[,c(7,10)],merge(genes_8043_Rn6_trimmed[,c(7,10)],merge(genes_7973_Rn6_trimmed[,c(7,10)],genes_8050_Rn6_trimmed[,c(7,10)], by ="locus", all=TRUE), by ="locus", all=TRUE), by ="locus", all=TRUE), by ="locus", all=TRUE)

#sets any unnamed genes a gene name of awesome1..n
j=1
for (i in 1:nrow(genes_Rn4_untrimmed)){
  n<-paste("awesome",j,sep="")
  if(is.na(genes_Rn4_untrimmed$gene_short_name[i])){
    genes_Rn4_untrimmed$gene_short_name[i]<- n
    j<<-j+1
  } else if (genes_Rn4_untrimmed$gene_short_name[i]=='-') {                      
    genes_Rn4_untrimmed$gene_short_name[i]<- n
    j<<-j+1
  }
}
#logs all FPKM values in the table
genes_Rn4_untrimmed[,3:7]<-log2(genes_Rn4_untrimmed[,3:7])
#sets any NA or -inf values to 0
genes_Rn4_untrimmed[,3:7][sapply(genes_Rn4_untrimmed[,3:7], is.na)]<-0
genes_Rn4_untrimmed[,3:7][sapply(genes_Rn4_untrimmed[,3:7], is.infinite)]<-0
#creates a table of counts which contains just the FPKM values and sets the rownames to the gene names
counts_Rn4_untrimmed<-genes_Rn4_untrimmed[,3:7]
rownames(counts_Rn4_untrimmed)<-genes_Rn4_untrimmed$gene_short_name
#sets experiment design and column names
design_Rn4_untrimmed<-model.matrix(~ 0+factor(c(1,1,2,2,2)))
colnames(design_Rn4_untrimmed)<-c("control","treatment")
#creates the contrast matrix so limma knows which groups to compare
contrast.matrix_Rn4_untrimmed <- makeContrasts(treatment-control, levels=design_Rn4_untrimmed)
#fits the data to the design
fit_Rn4_untrimmed <- lmFit(counts_Rn4_untrimmed, design_Rn4_untrimmed, method="robust")
#data fitted to the design is then compared using the contrast matrix
fit_Rn4_untrimmed <- contrasts.fit(fit_Rn4_untrimmed, contrast.matrix_Rn4_untrimmed)
#calculates further stats based on bayesian inference
fit_Rn4_untrimmed <- eBayes(fit_Rn4_untrimmed,robust=TRUE,trend=TRUE)
#applies a true or false indicator to each row if meets the requirements to be DEG or not
results_Rn4_untrimmed <- decideTests(fit_Rn4_untrimmed,adjust.method="none",lfc=1.5)
summary(results_Rn4_untrimmed)
#selects data to output for comparison on the website/graphs
output_Rn4_untrimmed <- toptable(fit_Rn4_untrimmed, coef=1, adjust="none",n=Inf)
write.table(output_Rn4_untrimmed, file="/home/tes9/Desktop/groupproject/files/R/results/results_Rn4_untrimmed.csv", row.names = TRUE,sep="\t",quote=FALSE)

#repeat of above for the remaining datasets
j=1
