    j<<-j+1
  }
}
genes_Rn4_trimmed[,3:7]<-log2(genes_Rn4_trimmed[,3:7])
genes_Rn4_trimmed[,3:7][sapply(genes_Rn4_trimmed[,3:7], is.na)]<-0
genes_Rn4_trimmed[,3:7][sapply(genes_Rn4_trimmed[,3:7], is.infinite)]<-0
counts_Rn4_trimmed<-genes_Rn4_trimmed[,3:7]
rownames(counts_Rn4_trimmed)<-genes_Rn4_trimmed$gene_short_name
design_Rn4_trimmed<-model.matrix(~ 0+factor(c(1,1,2,2,2)))
